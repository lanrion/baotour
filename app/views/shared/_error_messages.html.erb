<% if target.errors.any? %>  
<div class="alert alert-error">
	<a class="close" data-dismiss="alert">×</a>
	<div id="flash_alert">
		 <p><strong>有 <%= target.errors.count %> 处问题导至无法提交:</strong></p>
		 <ul>
		 <% target.errors.full_messages.each do |msg| %>
		   <li><%= msg %></li>
		 <% end %>
		 </ul>
	</div>	 
 </div>
<% end %>

