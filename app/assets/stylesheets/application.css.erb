.span-special ul{	list-style-type: none; border-top:1px solid #999; height:auto; width:100%; display:block; float:left; padding-top:10px;margin:0px;}
.span-special li{ height:auto; width:100%; float:left;list-style-type: none; min-height: 35px;}
.span-special input{ float:left;}
.span-special span{ display:block; float:left; width:100px; font-size:12px; text-align:right; line-height:30px;padding-right: 5px;}
.span-special p{ display:block; float:left; padding-left:100px; width:100%; line-height:25px; height:25px; margin:auto;}

